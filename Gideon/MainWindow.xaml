                                            <Label  Content="{Binding Temperature}"  FontFamily="Tempus Sans ITC" FontSize="72" Foreground="White"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <Image Source="{Binding ImageData}" HorizontalAlignment="Left" Width="50" Height="50"/>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Label  Content="{Binding City}"  FontFamily="Tempus Sans ITC" FontSize="24" Foreground="White"/>
